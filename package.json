{
  "name": "grayson-wescott-frontend",
  "displayName": "Grayson Wescott Frontend",
  "version": "0.1.0",
  "description": "A frontend for Grayson Wescott's portfolio website",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
    "format:fix": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "ci:check": "pnpm format && pnpm lint && pnpm db:validate && pnpm build && pnpm start",
    "ci:fix": "pnpm format:fix && pnpm lint:fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "node-emoji": "^2.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "sweetalert2": "^11.22.4",
    "tailwind-merge": "^3.3.1",
    "typescript-eslint": "^8.45.0",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  }
}
